using System;

    namespace num1{

        class num1{


            static void Main(String [] args){

             string a = "S" ;
             int positivo = 0 ,negativo = 0 , zero = 0, numero;

                

                while(a =="S"){

                    

                    Console.WriteLine("informe o número");
                    numero = int.Parse(Console.ReadLine());

                    if(numero>0){
                        positivo = positivo+1;
                    }
                    else if(numero<0)
                    {
                        negativo = negativo+1;
                    }
                    else if(numero==0){
                        zero = zero+1;
                    }
                     Console.WriteLine("deseja informar outro número? aperte 'S' para continuar e qualquer outra tecla para encerrar o programa. ");
                      a = Console.ReadLine();
                      
                    }

                    Console.WriteLine(" positivos = "+positivo+"\n negativos = "+negativo+"\n zeros = "+zero);
                }
                 
                       
                }
            }
        
    
